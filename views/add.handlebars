<script type="text/javascript">
	$(document).ready(function () {
        $('.form_datetime').datetimepicker({
        weekStart: 0,
        todayBtn:  1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1,
        });
        $('.form_datetime').datetimepicker('setStartDate', new Date());
        $('#when')
        .datepicker({
            format: 'mm/dd/yyyy'
        })
    });
</script>