<section class="section-padding wow fadeInUp delay-05s">
<div class="container">
<p>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#addBlog" aria-expanded="false" aria-controls="collapseExample">
    Add Blog
  </button>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#addEvent" aria-expanded="false" aria-controls="collapseExample">
    Add Event
  </button>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#addBelief" aria-expanded="false" aria-controls="collapseExample">
    Add Belief
  </button>
  {{!-- <form action="/admin/blog/upload" method="post" enctype="multipart/form-data">
  </form> --}}
</p>
<div class="collapse" id="addBlog">
  <div class="card card-block">
    <form id="addBlogForm" action="/admin/add/blog" method="post" enctype="multipart/form-data">
	  <div class="form-group">
	    <label for="title">Title</label>
	    <input name="title" type="text" class="form-control" id="title" placeholder="Title">
	  </div>
	  <div class="form-group">
	    <label for="author">Author</label>
	    <input name="author" type="text" class="form-control" id="author" placeholder="Author">
	  </div>
	  <div class="form-group">
	    <label for="img">Image Link</label>
	    <input name="image" type="text" class="form-control" id="image" placeholder="Image URL">
	  </div>
	  <div class="form-group">
      <label for="blogFile">Blog DOCX File Upload</label>
      <input name="file" type="file" class="form-control-file" id="blogFile" aria-describedby="fileHelp">
    </div>
	  <input type="submit" class="btn btn-primary"></input>
	</form>
  </div>
</div>
<div class="collapse" id="addEvent">
  <div class="card card-block">
    <form id="addEventForm" action="/admin/add/event" method="post">
      <div class="form-group">
        <label for="etitle">Title</label>
        <input name="title" type="etitle" class="form-control" id="etitle" placeholder="Title">
      </div>
      <div class="form-group">
        <label for="when">Date</label>
        <div class="input-group date form_datetime col-md-5" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
          <input name="date" class="form-control" type="text" value="">
          <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
        </div>
      </div>
      <div class="form-group">
        <label for="eimg">Image Link</label>
        <input name="image" type="text" class="form-control" id="eimg" placeholder="Image URL">
      </div>
      <div class="form-group">
        <label for="where">Where</label>
        <input name="where" type="text" class="form-control" id="where" placeholder="Where">
      </div>
      <div class="form-group">
        <label for="desc">Description</label>
        <textarea name="desc" class="form-control" id="desc" rows="5"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
<div class="collapse" id="addBelief">
  <div class="card card-block">
    <form id="addBeliefForm" action="/admin/add/belief" method="post">
	  <div class="form-group">
	    <label for="title">Title</label>
	    <input name="title" type="text" class="form-control" id="btitle" placeholder="Title">
	  </div>
	  <div class="form-group">
	    <label for="author">Belief</label>
	    <input name="belief" type="text" class="form-control" id="belief" placeholder="Belief">
	  </div>
	  <div class="form-group">
	    <label for="img">Verses</label>
	    <input name="verses" type="text" class="form-control" id="image" placeholder="Verses(sperate by ',')">
	  </div>
	  <input type="submit" class="btn btn-primary"></input>
	</form>
  </div>
</div>
</section>

