<section class="section-padding wow fadeInUp delay-05s">
<div class="container">

        <div class="row">
            <br>
            <br>
            <br>
            <br>
            <div id="blogCol" class="col-lg-8">


                <h1>{{blog.title}}</h1>

                <p class="lead">
                    by <a href="#">{{blog.author}}</a>
                </p>

                <hr>

                <p><span class="glyphicon glyphicon-time"></span> {{blog.datePosted}}</p>

                <hr>

                <img class="img-responsive center-block" src={{blog.image}} alt="">

                <hr>

                {{{blog.post}}}

                <hr>

                <div class="well">
                    <h4>Leave a Comment:</h4>
                    <form role="form" >
                        <div class="form-group">
                            <textarea disabled class="form-control" rows="3">Coming Soon!!</textarea>
                        </div>
                        <button disabled type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

                <hr>
            </div>
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Archives</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#">Coming Soon!</a>
                                </li>
                                <li><a href="#">Coming Soon!</a>
                                </li>
                                <li><a href="#">Coming Soon!</a>
                                </li>
                                <li><a href="#">Coming Soon!</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
            </div>

        </div>
        </div>
    </div>
